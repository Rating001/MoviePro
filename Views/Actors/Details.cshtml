@using MoviePro.Models.TMDB
@model ActorDetail

<div class="row d-flex">
    <div class="col-4">
        <div class="img-fluid">
            <img src="@Model.profile_path" style="width: 100%" class="align-self-center mr-3" alt"..." />
        </div>
    </div>

    <div class="col-8">
        <div class="ms-3">
            <div class="row">
                <div class="col-2"><span class="fw-bold">Name:</span></div>
                <div class="col-10">
                    @Model.name
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-2"><span class="fw-bold">Biography:</span></div>
                <div class="col-10">
                    @Model.biography
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-2"><span class="fw-bold">Birthday:</span></div>
                <div class="col-10">
                    @Model.birthday
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-2"><span class="fw-bold">Place of Birth:</span></div>
                <div class="col-10">
                    @Model.place_of_birth
                </div>
            </div>
        </div>
    </div>
</div>